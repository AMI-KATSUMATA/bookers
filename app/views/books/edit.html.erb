<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>

 <!--バリデーションエラーメッセージ-->
  <% if @book.errors.any? %>
  <div class="alert">
    <h2 class=alert_title><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
        <% end %>
     </ul>

  </div>
 <% end %>

 <div class="form">
<label for="book_title">Title</label></br>
<%= f.text_field :title %></br>
</div>

<div class="form">
  <label for="book_body">Body</label></br>
<%= f.text_area :body %></br>
</div>

<div class="action">
<%= f.submit'Update Book' %>
</div>
<% end %>


<div class="link">
  <%= link_to "Show", book_path(@book) %>
  |
  <%= link_to "Back", books_path %>
</div>